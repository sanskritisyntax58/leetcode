class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
        unordered_map<int,int>hi;
        int count=0;
        int sum=0;
        hi[0]=1;
        for(int i=0;i<nums.size();i++){
            sum+=nums[i];
            int rem=sum%k;
        if(rem<0){
            rem+=k;
        }
        if(hi.find(rem)!=hi.end())
        {
            count+=hi[rem];
        }
            hi[rem]++;
        }
        return count;
    }
};
